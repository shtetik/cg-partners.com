- article_classes = local_assigns[:article_classes]

.masonry-grid__column.masonry-grid__column--1of2
  article.article class=article_classes
    header
      = link_to focus_article_path(article.article_type.slug, article.slug),
                class: 'article__title'
        div = article.title
    section
      span> DA
      span.article__author
        = link_to article.person.full_name.upcase,
                  person_path(article.person.slug),
                  class: 'link'
      span
        - time = article.created_at
        = time_tag time, time.strftime('%d %b %Y').upcase
      .article__description
        == article.description
